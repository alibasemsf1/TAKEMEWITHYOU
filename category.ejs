<% include header %>           
<%- include('sidebar', {menu:'category'}) %>   
<div class="admin_main">
    <div class="row justify-content-center">
        
        <div class="col-xl-10 col-md-12">
            <button class="hd_btn" data-toggle="modal" data-target="#addNewCategory">+ Add Category</button>
        </div>
        <div class="col-xl-10 col-12 ad_mTop50 checkCategoryLength">
            <% if(category != 0){ %>
                <div class="ad_datatable_wrapper MainDiv">
                    <div class="row align-items-center ad_mBottom20">
                        <div class="col-4">
                            <h5 class="ad_subheading">Category( <%= category %> )</h5>
                        </div>
                        <div class="col text-right">
                            <div class="ad_search_wrapper">
                                <input type="text" class="form-control ad_datatableSearch" placeholder="Search..." />
                                <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" id="search">
                                    <path d="M8.3283 0C3.73857 0 0 3.73857 0 8.3283C0 12.918 3.73857 16.6566 8.3283 16.6566C10.3242 16.6566 12.1571 15.9479 13.5937 14.7714L18.5663 19.7439C18.643 19.8239 18.7349 19.8877 18.8366 19.9316C18.9383 19.9756 19.0478 19.9988 19.1586 20C19.2694 20.0011 19.3793 19.9801 19.4819 19.9382C19.5845 19.8963 19.6777 19.8344 19.756 19.756C19.8344 19.6777 19.8963 19.5845 19.9382 19.4819C19.9801 19.3793 20.0011 19.2694 20 19.1586C19.9988 19.0478 19.9756 18.9383 19.9316 18.8366C19.8877 18.7349 19.8239 18.643 19.7439 18.5663L14.7714 13.5937C15.9479 12.1571 16.6566 10.3242 16.6566 8.3283C16.6566 3.73857 12.918 0 8.3283 0ZM8.3283 1.66566C12.0178 1.66566 14.9909 4.63876 14.9909 8.3283C14.9909 12.0178 12.0178 14.9909 8.3283 14.9909C4.63876 14.9909 1.66566 12.0178 1.66566 8.3283C1.66566 4.63876 4.63876 1.66566 8.3283 1.66566Z"></path>
                                    </svg></span>
                            </div>
                        </div>
                    </div>
                    <table id="example" class="table ad_table" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>icon</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>  </tbody>
                    </table>
                </div>
            <% }else{ %>
                <div class="ad_nodata_textContent mt-3">
                    <div class="vertical_center_data">
                        <span class="nodata_img"><img src="./assets/images/nodata_found.svg" alt="No Data Found"/></span>
                        <p>You have not added any Category yet. Feel free to add category by clicking on Add Category button.</p>
                    </div>
                </div>
            <% } %>  
        </div>
    </div>
</div>
<div class="modal fade ad_modal " id="addNewCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="close_popup" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="hd_add_category_valid">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="ad_label">Title</label>
                            <input type="text" placeholder="Enter Category Name" class="form-control" id="hd_cat_title"/>
                        </div>
                        <div class="form-group ad_mBottom30">
                            <label class="ad_label">Icon</label>
                            <label class="ad_upload form-control">
                                <input type="file" class="d-none" id="hd_cat_icon" name="img"/>
                                <span>Choose file</span>
                            </label>
                            <p id="file_type_error"></p>
                        </div>
                        <p><b>Note : </b>Category will show on front only after adding products.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="ad_btn ad_hollowBtn close_add_category" data-dismiss="modal">Close</button>
                <button type="button" class="ad_btn bg-blue save_category">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade ad_modal " id="editCategory" tabindex="-1" role="dialog" aria-labelledby="exampleModalFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="close_popup" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="hd_edit_category_valid">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="ad_label">Title</label>
                            <input type="text" placeholder="Enter Category Name" class="form-control" id="hd_edit_title"/>
                        </div>
                        <div class="form-group ad_mBottom30">
                            <label class="ad_label">Icon</label>
                            <label class="ad_upload form-control">
                                <input type="file" class="d-none" id="hd_edit_icon" name="img"/>
                                <span>Choose file</span>
                            </label>
                            <p id="file_type_error"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="ad_btn ad_hollowBtn close_edit_category" data-dismiss="modal">Close</button>
                <button type="button" class="ad_btn bg-blue update_category">Update changes</button>
            </div>
        </div>
    </div>
</div>

<% include footer %>
<script src="assets/js/page_js/category.js"></script>

</body>
</html>