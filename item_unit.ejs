<% include header %>           
<%- include('sidebar', {menu:'itemUnit'}) %>   
<div class="admin_main">
    <div class="row justify-content-center">
        <div class="col-xl-10 col-md-12">
            <button class="hd_btn" data-toggle="modal" data-target="#addNewUnit">+ Add Unit</button>
        </div>
        <div class="col-xl-10 col-12 ad_mTop30 itemUnitLength">
            <% if(unit != 0){ %> 
                <div class="ad_datatable_wrapper MainDiv">
                    <div class="row align-items-center ad_mBottom20">
                        <div class="col-4">
                            <h5 class="ad_subheading">Units(<%= unit %>)</h5>
                        </div>
                        <div class="col text-right">
                            <div class="ad_search_wrapper">
                                <input type="text" class="form-control ad_datatableSearch" placeholder="Search..." />
                                <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" id="search">
                                    <path d="M8.3283 0C3.73857 0 0 3.73857 0 8.3283C0 12.918 3.73857 16.6566 8.3283 16.6566C10.3242 16.6566 12.1571 15.9479 13.5937 14.7714L18.5663 19.7439C18.643 19.8239 18.7349 19.8877 18.8366 19.9316C18.9383 19.9756 19.0478 19.9988 19.1586 20C19.2694 20.0011 19.3793 19.9801 19.4819 19.9382C19.5845 19.8963 19.6777 19.8344 19.756 19.756C19.8344 19.6777 19.8963 19.5845 19.9382 19.4819C19.9801 19.3793 20.0011 19.2694 20 19.1586C19.9988 19.0478 19.9756 18.9383 19.9316 18.8366C19.8877 18.7349 19.8239 18.643 19.7439 18.5663L14.7714 13.5937C15.9479 12.1571 16.6566 10.3242 16.6566 8.3283C16.6566 3.73857 12.918 0 8.3283 0ZM8.3283 1.66566C12.0178 1.66566 14.9909 4.63876 14.9909 8.3283C14.9909 12.0178 12.0178 14.9909 8.3283 14.9909C4.63876 14.9909 1.66566 12.0178 1.66566 8.3283C1.66566 4.63876 4.63876 1.66566 8.3283 1.66566Z"></path>
                                    </svg></span>
                            </div>
                        </div>
                    </div>
                    <table id="example" class="table ad_table" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody> </tbody>
                    </table>
                </div>
            <% }else{ %>
                <div class="ad_nodata_textContent mt-3">
                    <div class="vertical_center_data">
                        <span class="nodata_img"><img src="./assets/images/nodata_found.svg" alt="No Data Found"/></span>
                        <p>You have not added any item unit yet. Feel free to add unit by clicking  on Add Unit button.</p>
                    </div>
                </div>
            <% } %>  
        </div>
    </div>
</div>
<div class="modal fade ad_modal " id="addNewUnit" tabindex="-1" role="dialog" aria-labelledby="exampleModalFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add Unit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="close_popup" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="hd_add_unit_valid">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="ad_label">Name</label>
                            <input type="text" placeholder="Enter Unit Name" class="form-control" id="hd_unit_name"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="ad_btn ad_hollowBtn close_unit" data-dismiss="modal">Close</button>
                <button type="button" class="ad_btn bg-blue save_unit">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade ad_modal " id="editUnit" tabindex="-1" role="dialog" aria-labelledby="exampleModalFormTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Edit Unit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="close_popup" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="hd_edit_unit_valid">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label class="ad_label">Name</label>
                            <input type="text" placeholder="Enter Unit Name" class="form-control" id="hd_edit_unit_name"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="ad_btn ad_hollowBtn close_edit_unit" data-dismiss="modal">Close</button>
                <button type="button" class="ad_btn bg-blue update_unit">Update changes</button>
            </div>
        </div>
    </div>
</div>

<% include footer %>
<script src="assets/js/page_js/element.js"></script>
</body>
</html>